<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Homepage"
    android:background="@color/White"


    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:ignore="ScrollViewSize">

            <TextView
                android:layout_width="176dp"
                android:layout_height="57dp"
                android:layout_margin="20dp"
                android:layout_marginTop="50dp"

                android:text="Tour _EG"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="@color/GhostWhite"


                android:textSize="30sp"
                tools:ignore="HardcodedText,TextSizeCheck,TextContrastCheck" />

            <androidx.cardview.widget.CardView
                android:layout_width="173dp"
                android:layout_height="256dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="50dp"


                tools:ignore="RtlHardcoded">

                <ImageView

                    android:id="@+id/place"


                    android:layout_width="178dp"
                    android:layout_height="264dp"


                    android:layout_marginHorizontal="@dimen/cardview_compat_inset_shadow"
                    android:background="@drawable/okl"
                    android:scaleType="fitCenter"
                    tools:ignore="ContentDescription,MissingConstraints"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="214dp" />

                <TextView
                    android:id="@+id/places"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="210dp"




                    android:hint="      PLACES "
                    android:includeFontPadding="true"

                    android:textColorHint="@color/white"
                    android:background="#99141414"


                    android:textSize="24sp"
                    app:layout_constraintTop_toBottomOf="@+id/prymides33"
                    tools:ignore="HardcodedText,MissingConstraints" />


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="260dp"
                android:layout_marginLeft="210dp"
                android:layout_marginTop="-260dp"

                app:cardCornerRadius="50dp"


                tools:ignore="RtlHardcoded">

                <ImageView

                    android:id="@+id/eat"


                    android:layout_width="185dp"
                    android:layout_height="match_parent"


                    android:layout_marginHorizontal="@dimen/cardview_compat_inset_shadow"
                    android:background="@drawable/anm"
                    android:scaleType="fitCenter"
                    tools:ignore="ContentDescription,MissingConstraints"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="214dp" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="177dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="210dp"




                    android:hint="      Food "
                    android:includeFontPadding="true"

                    android:textColorHint="@color/white"
                    android:background="#99141414"

                    android:textSize="24sp"
                    android:textStyle="italic"
                    tools:ignore="HardcodedText,MissingConstraints" />


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="171dp"
                android:layout_height="270dp"
                android:layout_marginLeft="220dp"
                android:layout_marginTop="50dp"
                app:cardCornerRadius="50dp"


                tools:ignore="RtlHardcoded">

                <ImageView

                    android:id="@+id/hhh"


                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"


                    android:layout_marginHorizontal="@dimen/cardview_compat_inset_shadow"
                    android:background="@drawable/hotall"
                    android:scaleType="fitCenter"
                    tools:ignore="ContentDescription,MissingConstraints"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="214dp" />

                <TextView
                    android:id="@+id/hotaltext"
                    android:layout_width="158dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="220dp"



                    android:hint="      Hotel "
                    android:includeFontPadding="true"


                    android:textColorHint="@color/White"
                    android:background="#99141414"

                    android:textSize="24sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,MissingConstraints" />


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="182dp"
                android:layout_height="265dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="-270dp"
                app:cardCornerRadius="50dp"


                tools:ignore="RtlHardcoded">

                <ImageView

                    android:id="@+id/airplan"


                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"


                    android:layout_marginHorizontal="@dimen/cardview_compat_inset_shadow"
                    android:background="@drawable/airplane_irynarasko_shutterstock"
                    android:scaleType="fitCenter"
                    tools:ignore="ContentDescription,MissingConstraints"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="214dp" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="81dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="220dp"




                    android:hint="      AIR_PLAN "

                    android:includeFontPadding="true"

                    android:textColorHint="@color/White"
                    android:background="#99141414"

                    android:textSize="24sp"
                    tools:ignore="HardcodedText,MissingConstraints" />


            </androidx.cardview.widget.CardView>


            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/nav_view"
                android:layout_width="411dp"
                android:layout_height="66dp"
                android:layout_marginTop="10dp"
                android:background="?android:attr/windowBackground"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:menu="@menu/bottom_nav" />

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@color/blue"
            app:title="  TOUR EG "
            app:titleTextColor="@color/cardview_light_background" />
    </RelativeLayout>


    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/navmenu"
        app:menu="@menu/iconmenu"
        app:headerLayout="@layout/navheader"
        android:layout_gravity="start"
        tools:ignore="VisualLintBounds" />


</androidx.drawerlayout.widget.DrawerLayout>


