<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".kofta"
    android:background="@color/White"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout

            android:id="@+id/greenfood"
            android:layout_width="wrap_content"
            android:layout_height="328dp"
            android:layout_row="0"

            android:layout_column="0"
            android:layout_margin="10dp"
            android:background="@drawable/egyptiantraditional"
            android:orientation="horizontal">



        </LinearLayout>


        <Button
            android:id="@+id/btfood"
            android:layout_width="241dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="150dp"
            android:layout_marginLeft="200dp"

            android:layout_marginEnd="10dp"
            android:layout_marginBottom="-10dp"
            android:background="@drawable/bt_uisquare"

            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Add to card "
            android:textColor="@color/grey_200" />

        <RatingBar
            android:id="@+id/second_ratingbar"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="96dp"
            android:layout_height="26dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="-10dp"
            android:max="5"
            android:numStars="5"
            android:progressTint="@color/Yellow"
            android:rating="4.5"
            android:stepSize="0.5"
            app:layout_constraintStart_toStartOf="@id/second_subtitle"
            app:layout_constraintTop_toBottomOf="@id/second_subtitle"
            tools:targetApi="lollipop" />

        <me.biubiubiu.justifytext.library.JustifyTextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="1416dp"
            android:layout_gravity="center"

            android:text="Grilled Egyptian kofta is one of the most famous recipes of Egyptian cuisine, which is famous for its delicious food, especially meat and kofta, whether grilled or fried in oil, and the Egyptian kofta recipe is a recipe rich in different flavors and quick to prepare."

            />



    </LinearLayout>



</ScrollView>


