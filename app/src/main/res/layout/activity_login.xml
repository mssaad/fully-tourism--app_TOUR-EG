<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Login">


    <EditText

        android:id="@+id/mail"
        android:layout_width="343dp"
        android:layout_height="59dp"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/password"
        android:layout_alignLeft="@+id/password"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="-4dp"
        android:layout_marginRight="-4dp"
        android:background="@drawable/bt_uisquare"
        android:drawableRight="@drawable/ic_person"
        android:ems="10"
        android:hint="    email"
        android:inputType="textEmailAddress"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/AliceBlue"
        android:textSize="30sp"
        tools:ignore="Autofill,HardcodedText,RtlHardcoded" />


    <EditText
        android:id="@+id/password"
        android:layout_width="347dp"
        android:layout_height="63dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="320dp"
        android:layout_marginBottom="146dp"
        android:background="@drawable/bt_uisquare"
        android:drawableRight="@drawable/ic_lock"

        android:hint="    password"
        android:inputType="textPassword"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/AliceBlue"
        android:textSize="30sp"
        tools:ignore="Autofill,HardcodedText,RtlHardcoded,TextContrastCheck" />


    <ImageView
        android:id="@+id/circle4"
        android:layout_width="113dp"
        android:layout_height="125dp"
        android:layout_below="@+id/password"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-139dp"
        android:layout_marginRight="-85dp"
        android:src="@drawable/circlet"
        tools:ignore="ContentDescription,RtlHardcoded,VisualLintBounds" />

    <ImageView
        android:id="@+id/circle2"
        android:layout_width="182dp"
        android:layout_height="182dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="-90dp"
        android:layout_marginBottom="-40dp"
        android:src="@drawable/circle"
        tools:ignore="ImageContrastCheck,VisualLintBounds" />


    <ImageView
        android:id="@+id/circle3"
        android:layout_width="134dp"
        android:layout_height="134dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="-50dp"
        android:layout_marginBottom="-60dp"
        android:layout_toLeftOf="@id/circle2"
        android:src="@drawable/circlet"
        tools:ignore="VisualLintBounds" />

    <ImageView
        android:id="@+id/circle1"
        android:layout_width="134dp"
        android:layout_height="134dp"
        android:transitionName="image"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="-100dp"
        android:layout_marginBottom="50dp"
        android:src="@drawable/circlet"
        tools:ignore="VisualLintBounds" />

    <LinearLayout
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="206dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-3dp"
        android:background="@drawable/header"
        tools:ignore="VisualLintBounds">

        <TextView

            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="88dp"
            android:layout_marginTop="10dp"

            android:text="Welcome back"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/ic_menu_add"
            tools:ignore="TextSizeCheck"
            tools:layout_conversion_wrapHeight="126"
            tools:layout_conversion_wrapWidth="231" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="57dp"
        android:layout_height="52dp"
        android:layout_marginStart="300dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="540dp"
        android:background="@drawable/circle"
        android:textColor="@color/blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_add"
        tools:ignore="SpeakableTextPresentCheck,ImageContrastCheck"
        tools:layout_conversion_wrapHeight="126"
        tools:layout_conversion_wrapWidth="231" />

    <TextView
        android:id="@+id/tvregister"
        android:layout_width="216dp"
        android:layout_height="48dp"
        android:layout_marginStart="88dp"
        android:layout_marginLeft="88dp"
        android:layout_marginTop="540dp"
        android:text="create new account"
        android:textColor="@color/textColorPrimary"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_add"
        tools:ignore="TextSizeCheck"
        tools:layout_conversion_wrapHeight="126"
        tools:layout_conversion_wrapWidth="231" />

    <TextView
        android:id="@+id/Faccount"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginLeft="88dp"
        android:layout_marginTop="410dp"
        android:text="forget password"
        android:textColor="@color/textColorPrimary"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_add"
        tools:ignore="TextSizeCheck"
        tools:layout_conversion_wrapHeight="126"
        tools:layout_conversion_wrapWidth="231" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/loginbutton"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="314dp"
        android:layout_height="66dp"
        android:layout_alignEnd="@+id/Faccount"
        android:layout_alignRight="@+id/Faccount"
        android:layout_gravity="center"
        android:layout_marginTop="450dp"
        android:layout_marginEnd="-42dp"
        android:layout_marginRight="-42dp"
        android:background="@drawable/bt_uisquare"
        android:gravity="center"
        android:text="signin"
        android:textAllCaps="false"
        android:textColor="@color/Black"
        android:textSize="20sp"
        app:backgroundTint="@color/blue"
        app:cornerRadius="20dp" />


    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="156dp"
        android:layout_height="61dp"
        android:layout_alignTop="@+id/textView5"
        android:layout_alignEnd="@+id/loginbutton"
        android:layout_alignRight="@+id/loginbutton"
        android:layout_marginTop="94dp"
        android:layout_marginEnd="85dp"
        android:layout_marginRight="85dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_add"
        tools:layout_conversion_wrapWidth="231" />


    <Button
        android:id="@+id/btFacebook"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvregister"
        android:layout_marginStart="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bt_uisquare"
        android:drawableLeft="@drawable/logofacebook"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Login with facebook"
        android:textColor="@color/white" />
</RelativeLayout>




